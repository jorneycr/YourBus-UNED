@model List<RutaBus>
@{
    ViewBag.Title = "Resultados de Búsqueda";
}
<h2 id="page-title" class="resultados-titulo">Resultados de Búsqueda</h2>

@if (Model.Any())
{
    <!-- Tabla accesible con roles y cabeceras claras -->
    <table class="resultados-tabla" role="table" aria-labelledby="page-title">
        <thead>
            <tr role="row">
                <th class="resultados-encabezado" role="columnheader">Origen</th>
                <th class="resultados-encabezado" role="columnheader">Destino</th>
                <th class="resultados-encabezado" role="columnheader">Fecha</th>
                <th class="resultados-encabezado" role="columnheader">Hora de Salida</th>
                <th class="resultados-encabezado" role="columnheader">Precio</th>
                <th class="resultados-encabezado" role="columnheader">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ruta in Model)
            {
                <tr class="resultados-fila" role="row">
                    <td class="resultados-celda" role="cell">@ruta.Origen</td>
                    <td class="resultados-celda" role="cell">@ruta.Destino</td>
                    <td class="resultados-celda" role="cell">@ruta.Fecha.ToString("dd/MM/yyyy")</td>
                    <td class="resultados-celda" role="cell">@ruta.HoraSalida</td>
                    <td class="resultados-celda" role="cell">@ruta.Precio.ToString("C")</td>
                    <td class="resultados-celda" role="cell">
                        <!-- Enlace con descripción clara de la acción -->
                        <a href="/Busqueda/Detalles?rutaId=@ruta.Id" class="resultados-enlace" role="link" aria-label="Ver detalles de la ruta @ruta.Origen a @ruta.Destino">
                            Ver Detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="resultados-mensaje">No se encontraron rutas para los criterios seleccionados.</p>
}
