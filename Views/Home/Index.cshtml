@{
    ViewBag.Title = "Página Principal";
}

<!-- Título principal con etiqueta semántica -->
<h1 style="text-align: center;">Bienvenido al Sistema de Reservas de Viajes</h1>
<p style="text-align: center;">Encuentra y reserva rutas fácilmente.</p>

<!-- Encabezado de sección -->
<h2 style="text-align: center;">Buscar Rutas</h2>

<!-- Formulario accesible -->
<form id="searchForm" method="post" action="/Busqueda/Resultados">
    <!-- Campo Origen -->
    <label for="origen">Origen:</label>
    <input 
        type="text" 
        id="origen" 
        name="origen" 
        required 
        aria-required="true" 
        aria-label="Campo para ingresar la ciudad de origen"
        placeholder="Ingrese ciudad de origen"
    />

    <!-- Campo Destino -->
    <label for="destino">Destino:</label>
    <input 
        type="text" 
        id="destino" 
        name="destino" 
        required 
        aria-required="true" 
        aria-label="Campo para ingresar la ciudad de destino"
        placeholder="Ingrese ciudad de destino"
    />

    <!-- Campo Fecha -->
    <label for="fecha">Fecha:</label>
    <input 
        type="date" 
        id="fecha" 
        name="fecha" 
        required 
        aria-required="true" 
        aria-label="Campo para seleccionar la fecha de viaje"
    />

    <!-- Botón Buscar -->
    <button 
        type="submit" 
        aria-label="Buscar rutas disponibles"
    >
        Buscar
    </button>
</form>

<!-- Sección de Promociones -->
<section class="promotions" aria-labelledby="promotions-title">
    <h2 id="promotions-title">Promociones</h2>
    <p>Descuentos del 20% en rutas seleccionadas.</p>
    <p>Consulta nuestras promociones para usuarios frecuentes.</p>
</section>
