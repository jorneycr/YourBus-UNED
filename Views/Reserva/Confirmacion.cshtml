@{
    ViewBag.Title = "Reservar";
}

<!-- Título principal accesible -->
<h1 id="page-title">Reserva Confirmada</h1>

<!-- Mensaje de agradecimiento con estructura semántica -->
<p>Gracias, <strong>@Model.Usuario.Nombre</strong>. Su reserva ha sido confirmada.</p>

<!-- Sección accesible para los detalles de la reserva -->
<section aria-labelledby="reservation-details">
    <h2 id="reservation-details">Detalles de la Reserva</h2>
    <ul>
        <li><strong>Ruta:</strong> @Model.Ruta.Origen - @Model.Ruta.Destino</li>
        <li><strong>Fecha:</strong> @Model.Ruta.Fecha.ToString("dd/MM/yyyy")</li>
        <li><strong>Asiento:</strong> @Model.AsientoSeleccionado.Numero</li>
        <li><strong>Estado de Pago:</strong> @Model.EstadoPago</li>
    </ul>
</section>

<!-- Mensaje de despedida -->
<p>¡Buen viaje!</p>

<!-- Enlace accesible con propósito claro -->
<a href="/Usuario/Historial" class="button" aria-label="Ir al historial de reservas del usuario">Ver Historial de Reservas</a>
