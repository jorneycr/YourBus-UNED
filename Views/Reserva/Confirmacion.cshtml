@{
    ViewBag.Title = "Reservar";
}

@model Reserva
<h2>Reserva Confirmada</h2>
<p>Gracias, @Model.Usuario.Nombre. Su reserva ha sido confirmada.</p>

<h3>Detalles de la Reserva</h3>
<ul>
    <li>Ruta: @Model.Ruta.Origen - @Model.Ruta.Destino</li>
    <li>Fecha: @Model.Ruta.Fecha.ToString("dd/MM/yyyy")</li>
    <li>Asiento: @Model.AsientoSeleccionado.Numero</li>
    <li>Estado de Pago: @Model.EstadoPago</li>
</ul>

